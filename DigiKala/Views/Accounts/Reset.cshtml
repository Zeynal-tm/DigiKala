@model DigiKala.Core.ViewModels.ResetViewModel

@{
    ViewData["Title"] = "اختصاص رمز جدید";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<h4 class="text-center">اختصاص رمز جدید در دیجی کالا</h4>
<hr />
<form asp-action="Reset">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="ActiveCode" class="form-control input-lg" placeholder="کد تایید" />
        <span asp-validation-for="ActiveCode" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control input-lg" placeholder="کلمه عبور جدید" />
        <span asp-validation-for="Password" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input asp-for="ConfirmPassword" class="form-control input-lg" placeholder="تایید کلمه عبور" />
        <span asp-validation-for="ConfirmPassword" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="تغییر رمز عبور" class="btn-lg btn-block btn-submit" />
    </div>
</form>
