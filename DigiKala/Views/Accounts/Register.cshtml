@model DigiKala.Core.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "عضویت در دیجی کالا";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<h4 class="text-center">عضویت در دیجی کالا</h4>
<hr />
<form asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Mobile" class="form-control input-lg" placeholder="شماره موبایل" />
        <span asp-validation-for="Mobile" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control input-lg" placeholder="کلمه عبور" />
        <span asp-validation-for="Password" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input asp-for="ConfirmPassword" class="form-control input-lg" placeholder="تایید کلمه عبور" />
        <span asp-validation-for="ConfirmPassword" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="ارسال کد تایید" class="btn-lg btn-block btn-submit"/>
    </div>
    <div class="form-group">
        <h4 class="text-center">
            <a href="/Accounts/Login">قبلا ثبت نام کرده ام</a>
        </h4>
    </div>
</form>

